<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAFDFF"
        tools:context=".GameScreen">


    <!--ButtonView for the Score button-->

    <!--ButtonView for the Throw button-->


    <!--TextView for the score of the computer player-->

    <!--TextView for the score of the human player-->

    <!--LinearLayout containing the ImageButtons(Dices) of Computer player-->

    <!--LinearLayout containing the ImageButtons(Dices) of human player-->

    <Button
            android:text="@string/score"
            android:layout_width="96dp"
            android:layout_height="95dp"
            android:id="@+id/scoreButt"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="28dp" />

    <Button
            android:text="@string/throwButton"
            android:layout_width="96dp"
            android:layout_height="95dp"
            android:id="@+id/throwButt"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/scoreButt"
            app:layout_constraintHorizontal_bias="0.0" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="484dp"
            android:layout_height="110dp"
            android:id="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="152dp">

        <ImageButton
                style="@style/DiceImageButtonStyle"
                android:background="@android:color/transparent"
                android:id="@+id/h_dice1"
                android:contentDescription="TODO" />

        <ImageButton
                style="@style/DiceImageButtonStyle"
                android:background="@android:color/transparent"
                android:id="@+id/h_dice2"
                android:contentDescription="TODO" />

        <ImageButton
                style="@style/DiceImageButtonStyle"
                android:background="@android:color/transparent"
                android:id="@+id/h_dice4"
                android:contentDescription="TODO" />

        <ImageButton
                style="@style/DiceImageButtonStyle"
                android:background="@android:color/transparent"
                android:id="@+id/h_dice3"
                android:contentDescription="TODO" />

        <ImageButton
                style="@style/DiceImageButtonStyle"
                android:background="@android:color/transparent"
                android:id="@+id/h_dice5"
                android:contentDescription="TODO" />

    </LinearLayout>

    <TextView
            android:text="Computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView5"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="484dp"
            android:layout_height="110dp"
            android:id="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginTop="28dp">

        <ImageButton
                style="@style/DiceImageButtonStyle"
                android:background="@android:color/transparent"
                android:id="@+id/c_dice1"
                android:contentDescription="TODO" />

        <ImageButton
                style="@style/DiceImageButtonStyle"
                android:background="@android:color/transparent"
                android:id="@+id/c_dice2"
                android:contentDescription="TODO" />

        <ImageButton
                style="@style/DiceImageButtonStyle"
                android:background="@android:color/transparent"
                android:id="@+id/c_dice4"
                android:contentDescription="TODO" />

        <ImageButton
                style="@style/DiceImageButtonStyle"
                android:background="@android:color/transparent"
                android:id="@+id/c_dice3"
                android:contentDescription="TODO" />

        <ImageButton
                style="@style/DiceImageButtonStyle"
                android:background="@android:color/transparent"
                android:id="@+id/c_dice5"
                android:contentDescription="TODO" />

    </LinearLayout>

    <TextView
            android:text="Human"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="1.0" />

    <TextView
            android:text="H: 00 / C: 00"
            android:fontFamily="sans-serif-condensed"
            android:textSize="24sp"
            android:textColor="#3F51B5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/winCount"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toStartOf="@+id/scoreBoard"
            app:layout_constraintHorizontal_bias="0.025" />

    <TextView
            android:text="00/00"
            android:fontFamily="sans-serif-condensed"
            android:textSize="24sp"
            android:textColor="#3F51B5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreBoard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.044" />


</androidx.constraintlayout.widget.ConstraintLayout>